<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.actividad1.MainActivity"
    android:orientation="vertical"
    android:background="#000040">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00ffff"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:text="ROJO"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="#ff0000"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_weight="1"
            android:text="VERDE"
            android:background="#80ff00"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:text="AMARILLO"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:background="#ffff00"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:text="AZUL"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:background="#0000ff"
            android:layout_margin="5dp"
            android:textStyle="normal|bold|italic"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"/>





    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">



        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#ffff00"/>

        <TextView
            android:text="Columna_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:background="#8000ff"
            android:textSize="30dp"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffff00"/>

        <TextView
            android:text="Columna_dos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:textSize="30dp"
            android:background="#8000ff"
            android:textColor="#ffffff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffff00"/>

        <TextView
            android:text="Columna_tres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textSize="30dp"
            android:background="#8000ff"
            android:textColor="#ffffff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffff00"/>

        <TextView
            android:text="Columna_cuatro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="30dp"
            android:background="#8000ff"
            android:textColor="#ffffff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffff00"/>

    </LinearLayout>
</LinearLayout>
